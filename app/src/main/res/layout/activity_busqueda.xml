<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BusquedaActivity"
    android:orientation="vertical"
    android:background="?attr/background"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/primary_layout"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Búsqueda por ubicación"
        android:textColor="?attr/android:textColor"
        android:textSize="20sp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="-10dp"
        />

    <fragment
        android:id="@+id/contenedorBusquedaFragmento"
        class="com.example.tp_seminariolenguajes.fragments.BusquedaFragmento"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        />

    <FrameLayout
        android:id="@+id/contenedorRespuestaFragmento"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver atrás"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="?attr/android:textColor"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="45dp"
        />

</LinearLayout>