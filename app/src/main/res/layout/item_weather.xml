<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Imagen del clima -->
    <ImageView
        android:id="@+id/ivProximaImagenClima"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"/>

    <!-- Contenedor de la informaciÃ³n textual -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HORA DEL DIA -->
        <TextView
            android:id="@+id/tvProximaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvProximaHora"
            android:textColor="@color/whiteDay"
            />

        <!-- TEMPERATURA -->
        <TextView
            android:id="@+id/tvProximaTemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvProximaTemperatura"
            android:textColor="@color/whiteDay"
            />

        <!-- CONDICION -->
        <TextView
            android:id="@+id/tvProximaCondicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvProximaCondicion"
            android:textColor="@color/whiteDay"
            />

        <!-- CHANCE DE LLUVIA -->
        <TextView
            android:id="@+id/tvProximaProbLluviaHumedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvProximaProbLluviaHumedad"
            android:textColor="@color/whiteDay"
            />

    </LinearLayout>

</LinearLayout>