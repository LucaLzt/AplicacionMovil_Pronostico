<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ahora en"
            android:textColor="?attr/android:textColor"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ivImagenClima"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/tvGrados"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:textColor="?attr/android:textColor"
                    android:textSize="90sp"
                    android:text="center"
                    />

                <TextView
                    android:id="@+id/tvCondicion"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/android:textColor"
                    android:textSize="18sp"
                    android:text="tvCondicion"
                    />

                <TextView
                    android:id="@+id/tvMaxMin"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:text="tvMaxMin"
                    />

                <TextView
                    android:id="@+id/tvSensacionTermica"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:text="tvSensacionTermica"
                    />

                <TextView
                    android:id="@+id/tvHumedad"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:text="tvHumedad"
                    />

                <TextView
                    android:id="@+id/tvVientoCurrent"
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:text="tvVientoCurrent"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>